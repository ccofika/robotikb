# MongoDB konekcija
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Email konfiguracija
# OPCIJA 1: Gmail (radi lokalno, možda neće na cloud hosting)
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password

# OPCIJA 2: SendGrid (preporučeno za production/cloud)
# SMTP_SERVICE=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# EMAIL_USER=your-sender-email@yourdomain.com

# OPCIJA 3: Mailgun
# SMTP_SERVICE=mailgun
# MAILGUN_USERNAME=postmaster@mg.yourdomain.com
# MAILGUN_PASSWORD=your-mailgun-password
# EMAIL_USER=your-sender-email@yourdomain.com

# OPCIJA 4: SMTP2GO
# SMTP_SERVICE=smtp2go
# SMTP2GO_USERNAME=your-smtp2go-username
# SMTP2GO_PASSWORD=your-smtp2go-password
# EMAIL_USER=your-sender-email@yourdomain.com

# OPCIJA 5: Custom SMTP
# SMTP_SERVICE=custom
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# EMAIL_USER=your-sender-email@yourdomain.com

# Development opcije
NODE_ENV=production
# LOG_EMAILS=true  # Uključi ovo da se email-ovi loguju umesto slanja (za testing)

# JWT tajni ključ
JWT_SECRET=your-very-long-and-secure-jwt-secret-key

# Port aplikacije
PORT=5000

# OpenAI API konfiguracija (za AI verifikaciju radnih naloga i AI analizu)
OPENAI_API_KEY=your-openai-api-key

# Internal API Key (za scheduled jobs i interne pozive)
INTERNAL_API_KEY=your-internal-api-key-for-scheduled-jobs

# Base URL aplikacije (za scheduled jobs)
BASE_URL=http://localhost:5000